<h1>
  Login
</h1>

{{#if messages}}
  <div class="alert alert-danger">
    Invalid credentials
  </div>
{{else}}
  <div class="alert alert-info">
    Please enter your credentials
  </div>
{{/if}}
<div id="editFormOuter">
  <div id="editFormInner">
    <form method="post">
      <fieldset class="form-group">
        <label for="username" class="col-2 control-label">
          Username: *
        </label>
        <input name="username" id="username" class="form-control" required />
      </fieldset>
      <fieldset class="form-group">
        <label for="password" class="col-2 control-label">
          Password: *
        </label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </fieldset>
      <fieldset class="form-groupR">
        <button class="btn btn-info">
          Login
        </button>
      </fieldset>
      <hr>
    </form>
  </div>
</div>