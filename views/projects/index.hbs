<h1 class="display-5">{{title}}</h1>
{{! Add links to CRUD operations }}
{{!commented out to not allow viewers to edit/ user can add when editing}}
{{#if user}}
<a class="btn btn-info" href="/projects/add">Add a new project</a>
{{/if}}

{{! To Show data }}
<table class="table table-striped table-hover">
  <thead>
    <th>Name</th>
    <th>Last Updated</th>
    <th>Languages</th>
    <th>Hosting</th>
    <th>Status</th>
    <th>Issue</th>
    <th>Image / Link</th>
    {{#if ./user}}
    <th>Actions</th>
    {{/if}}
  </thead>
  <tbody>
    {{#each dataset}}
      <tr>
        <td>{{this.name}}</td>
        <td id="td2"><ul id="cellList">{{this.updateDate}}</ul></td>
        <td id="td3"><p id="cellList">{{this.language}}</p></td>
        <td>{{this.host}}</td>
        <td>{{this.status}}</td>
        <td id="td5">
          <ul id="cellList">{{this.issue}}</ul>
        </td>
        <td class="col-md-3"><a href={{this.link}} target="_blank">
          <img class="w-50" src="images/{{this.image}}"/></a></td>
        {{!COMMENTED OUT FOR VIEWER}}
        {{!#if userAuthenticated}}
        {{#if ../user}}
        <td id="action">
          <a class="btn btn-primary" href="/projects/edit/{{this._id}}">Edit</a>
          <a
            class="btn btn-danger"
            href="/projects/delete/{{this._id}}"
            onclick="return confirmDeletion()"
          >Delete</a>
        </td>
        {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>
